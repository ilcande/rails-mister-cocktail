<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1532269748385-a458d8ee473e?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=66d1dbee85a5136e5904d84861fbe532&auto=format&fit=crop&w=1650&q=80');">
  <div class="card-category">
    <div class="name">
      <p>
        <%= @cocktail.name %>
      </p>
    </div>
  </div>



  <div class="card-description">

    <div class="details">
        <strong>Doses:</strong>
        <% @cocktail.doses.each do |dose| %>
          <p>
            <%= dose.description %>
          </p>
        <% end %>
      </p>
    </div>

    <div class="dose"><%= simple_form_for [@cocktail, @dose] do |f| %>
        <% if @dose.errors.any? %>
          <div class="errors-container">
            <ul>
              <% @dose.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-inputs">
          <%= f.input :description %>
          <%= f.association :ingredient %>
        </div>

        <div class="buttons">
          <%= f.button :submit %>

          <%= link_to 'Back', cocktails_path, class: "btn btn-danger btn-xs" %>
        </div>
      <% end %>
    </div>
  </div>
